<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClementPaulSpotifyApp.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Application en Xamarin trop cool"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                FontSize="25"/>

            <Label Text="paulrezzonico.com clementraynaud.net"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                FontSize="15"/>

            <Image Source="img.png"/>

            <Button Text="Click HERE !" Clicked="Button_OnClicked">
            </Button>
      
            <FlexLayout Direction="Row">
                <BoxView FlexLayout.Basis="20%" BackgroundColor="{Binding firstColor}"></BoxView>
                <BoxView FlexLayout.Basis="20%" BackgroundColor="{Binding secondColor}"></BoxView>
            </FlexLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>